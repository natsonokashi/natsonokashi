.container-blog
  width 960px
  padding 30px
  margin 0 auto
  h1, h2, h3, h4, h5, h6
    margin 10px 0
    font-family inherit
    line-height 20px
    color inherit
    text-rendering optimizelegibility
  h1, h2, h3
    line-height 40px
    font-size 22px!important
  .pro-hint
    font-size  12px
    color grey
  .post-list-item
    .post-header
      overflow hidden
      margin-bottom 30px
      .post-title
        font-size 26px
        float left
        color #000
      .meta
        margin-top 15px
        float right

@media screen and (max-width:800px)
  .container-blog
    width 100%!important
